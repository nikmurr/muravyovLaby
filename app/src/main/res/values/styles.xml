<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseButtonStyle">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:text">"Кнопка"</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="DefaultButtonStyle" parent="BaseButtonStyle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:backgroundTint">@color/base</item>
    </style>

    <style name="AccentButtonStyle" parent="DefaultButtonStyle">
        <item name="android:textColor">@color/base</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="CancelButtonStyle" parent="DefaultButtonStyle">
        <item name="android:textColor">@color/extra_base</item>
        <item name="android:backgroundTint">@color/extra_accent</item>
    </style>

    <style name="DefaultListItemStyle">
        <item name="android:textSize">30sp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>
</resources>